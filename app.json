{
  "expo": {
    "name": "WIRC Connect",
    "slug": "WIRC_Connect",
    "version": "3.0",
    "orientation": "portrait",
    "icon": "./assets/wirclogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-logo.png",
      "backgroundColor": "#fff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "buildNumber": "4",
      "bundleIdentifier": "com.amitaujas.WIRCUser",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to take attendance tracking.",
        "NSCameraUsageDescription": "We need access to your camera to scan QR codes for Member Details."
      },
      "plugins": ["@react-native-firebase/app", "expo-build-properties"]
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "versionCode": 1020,
      "adaptiveIcon": {
        "foregroundImage": "./assets/wirclogo.png",
        "backgroundColor": "#ffffff"
      },
      "plugins": ["@react-native-firebase/app"],
      "permissions": ["ACCESS_FINE_LOCATION"],
      "package": "com.amitaujas.WIRCUser"
    },
    "web": {
      "favicon": "./assets/wirclogo.png"
    },
    "extra": {
      "eas": {
        "projectId": "88c09754-c144-42c1-875a-413c1ab24ffd"
      }
    }
  }
}
