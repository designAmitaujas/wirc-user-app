{
  "expo": {
    "name": "WIRC Connect",
    "slug": "WIRC Connect",
    "version": "2.0",
    "orientation": "portrait",
    "icon": "./assets/wirclogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-logo.png",
      "resizeMode": "conatin",
      "backgroundColor": "#fff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to scan QR codes for attendance tracking.",
        "NSCameraUsageDescription": "We need access to your camera to scan QR codes for attendance tracking."
      }
    },
    "android": {
      "versionCode": 1010,
      "adaptiveIcon": {
        "foregroundImage": "./assets/wirclogo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["ACCESS_FINE_LOCATION"],
      "package": "com.amitaujas.WIRCUser"
    },
    "web": {
      "favicon": "./assets/wirclogo.png"
    }
  }
}
